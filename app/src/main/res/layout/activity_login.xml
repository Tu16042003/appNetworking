<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/nen"
    android:orientation="vertical"
    tools:context=".Register">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wellcome"
            android:textColor="@color/black"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to start"
            android:textColor="@color/Gray"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botron_layout"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="20dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:drawableRight="@drawable/ic_email"
            android:gravity="center_vertical"
            android:hint="Nhập Email của bạn"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:drawableRight="@drawable/ic_matkhau"
            android:gravity="center_vertical"
            android:hint="Nhập Password cho tài khoản"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="162dp">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Haven't account? "
                android:textSize="16sp"
                tools:layout_editor_absoluteX="150dp"
                tools:layout_editor_absoluteY="193dp" />

            <TextView
                android:id="@+id/btn_lregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up!"
                android:textColor="@color/purple_700"
                tools:layout_editor_absoluteX="150dp"
                tools:layout_editor_absoluteY="193dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_llogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@color/blueNhat"
            android:onClick="onLogin"
            android:text="Continue"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="460dp" />

    </LinearLayout>
</LinearLayout>